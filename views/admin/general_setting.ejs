<!-- header -->
<%- include('../layouts/adminheader.ejs') %>

<!-- Settings Column -->
<main>
    <div class="container-fluid">
        <h1 class="mt-4">General Settings</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active">Settings</li>
        </ol>
        <!-- Settings form -->
        <form method="POST" onsubmit="return updateSettings(this)">
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Site Title </label>
                <div class="col-sm-4">
                    <input type="text" name="title" class="form-control" value="<%=  setting.title %>">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12 col-md-2">New User Default Role</div>
                <div class="col-sm-12 col-md-4">
                    <select class="form-control" name="role">
                        <% roles.forEach(function(role) { %>
                        <option value="<%= role.slug %>"><%= role.title %></option>
                        <% }) %>
                    </select>
                </div>
            </div>
            <fieldset class="form-group">
                <div class="row">
                    <legend class="col-form-label col-sm-2 pt-0">Date Format</legend>
                    <div class="col-sm-10">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1"
                                value="option1" checked>
                            <label class="form-check-label" for="gridRadios1">
                                2020-08-15 <span class="ml-4">Y-m-d</span>
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2"
                                value="option2">
                            <label class="form-check-label" for="gridRadios2">
                                08/15/2020 <span class="ml-4">m/d/y</span>
                            </label>
                        </div>
                        <div class="form-check disabled">
                            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3"
                                value="option3" disabled>
                            <label class="form-check-label" for="gridRadios3">
                                15/08/2020<span class="ml-4">d/m/y</span>
                            </label>
                        </div>
                    </div>
                </div>
            </fieldset>
            <br>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Save Setting</button>
                </div>
            </div>
        </form>

    </div>
</main>

<!-- AJAX to update settings-->

<script>
    function updateSettings(form) {
        const formData = {
            limit: form.post_limit.value,
        }
        $.ajax({
            url: '/admin/settings/general',
            method: "POST",
            data: formData,
            success: function (response) {
                if (response.status === "success") {
                    bs4pop.notice(response.msg, {
                        type: 'success',
                        position: 'bottomright',
                        appendType: 'append',
                        closeBtn: false,
                        className: ''
                    })
                    setTimeout(function () { window.location.reload() }, 1000);
                } else if (response.status === "error") {
                    bs4pop.notice(response.msg, {
                        type: 'danger',
                        position: 'bottomright',
                        appendType: 'append',
                        closeBtn: false,
                        className: ''
                    })
                }
            }
        })
        return false
    }

</script>


<!-- footer -->
<%- include('../layouts/adminfooter.ejs') %>